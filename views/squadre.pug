doctype html
html(lang="en")
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/style.css')
    title Ciao Mondo
  body
    header.header
      h1 #{title}
    article.container
      each giocatore in squadre
        div.person
          div.person-image(style=`background: url('${giocatore.pathImmagine}') top center no-repeat; background-size: cover;`)

          h2.person-name 
            br
            strong Nome: #{giocatore.nome}
            br
            strong Altezza: #{giocatore.altezza}
            br
            strong Ruolo : #{giocatore.ruolo}
            br
            

  div.container
    a(href="") 
    a.button.button-buy(href='/') Pagina Iniziale